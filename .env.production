# ============================================
# ULTRARSLANOGLU CORE - PRODUCTION ENVIRONMENT
# ============================================
# PRODUCTION ortamı için configuration
# ⚠️ KRITIK: Tüm değerleri güvenli, production-ready değerlerle değiştirin!

# ============================================
# ORTAM AYARLARI
# ============================================
NODE_ENV=production
PYTHON_ENV=production
DEBUG=false
VERBOSE=false

# ============================================
# VERİTABANI AYARLARI - Production
# ============================================
# MongoDB - Production (Atlas önerilir)
MONGO_PASSWORD=CHANGE_ME_PRODUCTION_PASSWORD
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_DATABASE=ultrarslanoglu_prod
# Azure Cosmos DB veya Atlas kullanmanız önerilir
MONGODB_URI=mongodb+srv://admin:CHANGE_ME_PASSWORD@cluster.mongodb.net/ultrarslanoglu_prod?retryWrites=true&w=majority

# Redis - Production (Redis Cloud önerilir)
REDIS_URL=redis://default:CHANGE_ME_PASSWORD@redis-production-host:6379/0
REDIS_PASSWORD=CHANGE_ME_PRODUCTION_PASSWORD

# ============================================
# GÜVENLİK & AUTHENTICATION
# ============================================
# ⚠️ KRITIK: Tüm secret key'leri güvenli şekilde generate edin!
JWT_SECRET=CHANGE_ME_LONG_RANDOM_JWT_SECRET_KEY_MIN_32_CHARS
SESSION_SECRET=CHANGE_ME_LONG_RANDOM_SESSION_SECRET_KEY_MIN_32_CHARS
NEXTAUTH_SECRET=CHANGE_ME_LONG_RANDOM_NEXTAUTH_SECRET_KEY_MIN_32_CHARS
NEXTAUTH_URL=https://ultrarslanoglu.com

# ============================================
# API KEYS & EXTERNAL SERVICES
# ============================================
# GitHub
GITHUB_TOKEN=CHANGE_ME_GITHUB_TOKEN

# OpenAI
OPENAI_API_KEY=CHANGE_ME_OPENAI_API_KEY

# ============================================
# SOSYAL MEDYA PLATFORMLARI - Production
# ============================================
# Facebook / Meta - Production Apps
FACEBOOK_APP_ID=CHANGE_ME_PRODUCTION_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET=CHANGE_ME_PRODUCTION_FACEBOOK_APP_SECRET
FACEBOOK_CALLBACK_URL=https://ultrarslanoglu.com/auth/facebook/callback

# Google / YouTube - Production
GOOGLE_CLIENT_ID=CHANGE_ME_PRODUCTION_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=CHANGE_ME_PRODUCTION_GOOGLE_CLIENT_SECRET
GOOGLE_CALLBACK_URL=https://ultrarslanoglu.com/auth/google/callback

# TikTok - Production
TIKTOK_CLIENT_KEY=CHANGE_ME_PRODUCTION_TIKTOK_CLIENT_KEY
TIKTOK_CLIENT_SECRET=CHANGE_ME_PRODUCTION_TIKTOK_CLIENT_SECRET
TIKTOK_CALLBACK_URL=https://ultrarslanoglu.com/auth/tiktok/callback

# Twitter / X - Production
TWITTER_API_KEY=CHANGE_ME_PRODUCTION_TWITTER_API_KEY
TWITTER_API_SECRET=CHANGE_ME_PRODUCTION_TWITTER_API_SECRET
TWITTER_BEARER_TOKEN=CHANGE_ME_PRODUCTION_TWITTER_BEARER_TOKEN
TWITTER_CALLBACK_URL=https://ultrarslanoglu.com/auth/twitter/callback

# Instagram (Meta Business API) - Production
INSTAGRAM_APP_ID=CHANGE_ME_PRODUCTION_INSTAGRAM_APP_ID
INSTAGRAM_APP_SECRET=CHANGE_ME_PRODUCTION_INSTAGRAM_APP_SECRET

# ============================================
# URL AYARLARI - Production
# ============================================
NEXT_PUBLIC_SITE_URL=https://ultrarslanoglu.com
NEXT_PUBLIC_API_URL=https://api.ultrarslanoglu.com
NEXT_PUBLIC_API_GATEWAY_URL=https://api.ultrarslanoglu.com
SOCIAL_MEDIA_HUB_URL=https://hub.ultrarslanoglu.com
API_GATEWAY_URL=https://api.ultrarslanoglu.com

# ============================================
# DOSYA UPLOAD AYARLARI
# ============================================
MAX_FILE_SIZE=1073741824  # 1GB
UPLOAD_DIR=/data/uploads
# AWS S3 önerilir
USE_S3=true
AWS_ACCESS_KEY_ID=CHANGE_ME_AWS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_AWS_SECRET
AWS_BUCKET_NAME=ultrarslanoglu-uploads
AWS_REGION=eu-west-1

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=warning
LOG_FORMAT=json

# ============================================
# CELERY CONFIGURATION - Production
# ============================================
CELERY_BROKER_URL=redis://default:CHANGE_ME_PASSWORD@redis-production-host:6379/0
CELERY_RESULT_BACKEND=redis://default:CHANGE_ME_PASSWORD@redis-production-host:6379/0
CELERY_TASK_TIME_LIMIT=7200
CELERY_TASK_SOFT_TIME_LIMIT=6000
CELERY_WORKER_CONCURRENCY=4

# ============================================
# CORS AYARLARI - Production
# ============================================
CORS_ORIGIN=https://ultrarslanoglu.com,https://hub.ultrarslanoglu.com
CORS_CREDENTIALS=true

# ============================================
# RATE LIMITING - Production (Katı)
# ============================================
RATE_LIMIT_WINDOW_MS=900000  # 15 dakika
RATE_LIMIT_MAX_REQUESTS=100  # 100 request per 15 min

# ============================================
# EMAIL AYARLARI - Production
# ============================================
# SendGrid, AWS SES veya SMTP önerilir
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=CHANGE_ME_SENDGRID_API_KEY
EMAIL_FROM=noreply@ultrarslanoglu.com

# ============================================
# MONITORING & ANALYTICS - Production
# ============================================
SENTRY_DSN=https://CHANGE_ME_SENTRY_KEY@sentry.io/PROJECT_ID
GOOGLE_ANALYTICS_ID=CHANGE_ME_GA4_ID
DATADOG_API_KEY=CHANGE_ME_DATADOG_KEY

# ============================================
# SSL/TLS AYARLARI
# ============================================
USE_SSL=true
SSL_CERT_PATH=/etc/nginx/certs/fullchain.pem
SSL_KEY_PATH=/etc/nginx/certs/privkey.pem

# ============================================
# BACKUP & DISASTER RECOVERY
# ============================================
ENABLE_BACKUPS=true
BACKUP_SCHEDULE=0 2 * * *  # Her gün 02:00'de
BACKUP_RETENTION_DAYS=30

# ============================================
# DATA PERSISTENCE
# ============================================
KEEP_DATA_ON_DOWN=true  # Production'da data'yı koru
