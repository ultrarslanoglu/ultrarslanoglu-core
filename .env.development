# ============================================
# ULTRARSLANOGLU CORE - DEVELOPMENT ENVIRONMENT
# ============================================
# Local geliştirme ortamı için configuration
# NOT: Güvenli değerlerle set edin!

# ============================================
# ORTAM AYARLARI
# ============================================
NODE_ENV=development
PYTHON_ENV=development
DEBUG=true
VERBOSE=true

# ============================================
# VERİTABANI AYARLARI
# ============================================
# MongoDB - Development
MONGO_PASSWORD=dev_password_2025
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_DATABASE=ultrarslanoglu_dev
MONGODB_URI=mongodb://admin:dev_password_2025@mongodb:27017/ultrarslanoglu_dev?authSource=admin

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# ============================================
# GÜVENLİK & AUTHENTICATION
# ============================================
JWT_SECRET=dev-jwt-secret-key-do-not-use-production
SESSION_SECRET=dev-session-secret-key-do-not-use-production
NEXTAUTH_SECRET=dev-nextauth-secret-key-do-not-use-production
NEXTAUTH_URL=http://localhost:3001

# ============================================
# API KEYS & EXTERNAL SERVICES
# ============================================
# GitHub - Optional for development
GITHUB_TOKEN=your-github-token-here

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# ============================================
# SOSYAL MEDYA PLATFORMLARI - Development
# ============================================
# Facebook / Meta
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/auth/facebook/callback

# Google / YouTube
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# TikTok
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_CALLBACK_URL=http://localhost:3000/auth/tiktok/callback

# Twitter / X
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_CALLBACK_URL=http://localhost:3000/auth/twitter/callback

# Instagram (Meta Business API)
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# ============================================
# URL AYARLARI - Development
# ============================================
NEXT_PUBLIC_SITE_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:5000
SOCIAL_MEDIA_HUB_URL=http://localhost:3000
API_GATEWAY_URL=http://localhost:5000

# ============================================
# DOSYA UPLOAD AYARLARI
# ============================================
MAX_FILE_SIZE=104857600  # 100MB
UPLOAD_DIR=/app/uploads

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================
# CELERY CONFIGURATION
# ============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3000

# ============================================
# CORS AYARLARI
# ============================================
CORS_ORIGIN=http://localhost:3001,http://localhost:3000,http://localhost:5000
CORS_CREDENTIALS=true

# ============================================
# RATE LIMITING - Development (Daha esnekse)
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ============================================
# EMAIL AYARLARI - Development (Optional)
# ============================================
SMTP_HOST=localhost
SMTP_PORT=1025  # MailHog default port
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@ultrarslanoglu-dev.local

# ============================================
# MONITORING & ANALYTICS - Development
# ============================================
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# ============================================
# DATA PERSISTENCE
# ============================================
KEEP_DATA_ON_DOWN=false  # Development'da data'yı sil
