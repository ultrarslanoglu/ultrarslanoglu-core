# ============================================
# ULTRARSLANOGLU CORE - DOCKER ENVIRONMENT
# ============================================
# Bu dosya projenin Docker ortamı için gerekli tüm environment değişkenlerini içerir
# Production ortamında mutlaka güvenli değerlerle değiştirin!

# ============================================
# GENEL AYARLAR
# ============================================
NODE_ENV=development
PYTHON_ENV=development

# ============================================
# VERİTABANI AYARLARI
# ============================================
# MongoDB
MONGO_PASSWORD=ultrarslanoglu2025
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_DATABASE=ultrarslanoglu

# MongoDB Connection Strings (Servisler için)
MONGODB_URI=mongodb://admin:ultrarslanoglu2025@mongodb:27017/ultrarslanoglu?authSource=admin
# Sosyal medya servisi için ayrı DB kullanmak isterseniz:
SOCIAL_MEDIA_MONGODB_URI=mongodb://admin:ultrarslanoglu2025@mongodb:27017/social_media_hub?authSource=admin

# ============================================
# REDIS CACHE & QUEUE
# ============================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# ============================================
# GÜVENLİK & AUTHENTICATION
# ============================================
# JWT Secrets (Production'da değiştirin!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-super-secret-session-key-change-in-production
NEXTAUTH_SECRET=your-super-secret-nextauth-key-change-in-production

# NextAuth
NEXTAUTH_URL=http://localhost:3001

# ============================================
# API KEYS & EXTERNAL SERVICES
# ============================================
# GitHub
GITHUB_TOKEN=your-github-token-here

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# ============================================
# SOSYAL MEDYA PLATFORMLARI
# ============================================
# Facebook / Meta
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:3000/auth/facebook/callback

# Google / YouTube
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# TikTok
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_CALLBACK_URL=http://localhost:3000/auth/tiktok/callback

# Twitter / X
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_CALLBACK_URL=http://localhost:3000/auth/twitter/callback

# Instagram (Meta Business API)
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# ============================================
# URL AYARLARI
# ============================================
# Website
NEXT_PUBLIC_SITE_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:5000

# Social Media Hub
SOCIAL_MEDIA_HUB_URL=http://localhost:3000

# API Gateway
API_GATEWAY_URL=http://localhost:5000

# ============================================
# STORAGE & FILE UPLOAD
# ============================================
MAX_FILE_SIZE=20971520
UPLOAD_DIR=/app/uploads

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# CELERY WORKERS (Background Tasks)
# ============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# DEVELOPMENT & DEBUG
# ============================================
DEBUG=false
VERBOSE=false

# ============================================
# CORS AYARLARI
# ============================================
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# EMAIL AYARLARI (Opsiyonel)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@ultrarslanoglu.com

# ============================================
# MONITORING & ANALYTICS (Opsiyonel)
# ============================================
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
