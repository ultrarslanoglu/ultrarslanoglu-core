# Ultrarslanoglu-Core Environment Variables
# Bu dosyayı .env olarak kopyalayın ve değerlerinizi girin

# GitHub Models API Token
# GitHub → Settings → Developer settings → Personal access tokens → Generate new token
# Scopes: read:packages
GITHUB_TOKEN=your_github_token_here

# MongoDB
MONGODB_URI=mongodb://admin:ultrarslanoglu2025@localhost:27017/ultrarslanoglu?authSource=admin
MONGODB_USERNAME=admin
MONGODB_PASSWORD=ultrarslanoglu2025

# Redis
REDIS_URL=redis://localhost:6379/0

# Social Media Hub
BASE_URL=https://ultrarslanoglu.com
PORT=3000
NODE_ENV=development

# Session & JWT
SESSION_SECRET=your-super-secret-session-key-change-this
JWT_SECRET=your-jwt-secret-key-change-this
JWT_EXPIRES_IN=7d

# TikTok OAuth
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=https://ultrarslanoglu.com/auth/tiktok/callback

# Meta (Facebook & Instagram) OAuth
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_REDIRECT_URI=https://ultrarslanoglu.com/auth/meta/callback
META_WEBHOOK_VERIFY_TOKEN=ultrarslanoglu_webhook_token_2025

# Google (YouTube) OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://ultrarslanoglu.com/auth/youtube/callback

# X (Twitter) OAuth 2.0
X_CLIENT_ID=your_x_client_id
X_CLIENT_SECRET=your_x_client_secret
X_REDIRECT_URI=https://ultrarslanoglu.com/auth/x/callback

# AI Configuration
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Security
CORS_ORIGIN=https://ultrarslanoglu.com
ALLOWED_HOSTS=ultrarslanoglu.com,www.ultrarslanoglu.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
