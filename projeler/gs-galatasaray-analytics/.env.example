# Flask
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Server
HOST=0.0.0.0
PORT=5002

# Veritabanı - Azure Cosmos DB
USE_COSMOS_DB=true
COSMOS_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-db-key
COSMOS_DATABASE=galatasaray_analytics

# Fallback - MongoDB
MONGODB_URI=mongodb://localhost:27017/galatasaray_analytics

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=true
CACHE_TTL=3600

# Twitter/X API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Meta/Instagram API
META_ACCESS_TOKEN=your-meta-access-token
META_BUSINESS_ACCOUNT_ID=your-business-account-id

# YouTube API
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CHANNEL_ID=galatasaraytv

# TikTok API
TIKTOK_API_KEY=your-tiktok-api-key
TIKTOK_SECRET=your-tiktok-secret

# Web Scraping
SCRAPING_ENABLED=true
SELENIUM_HEADLESS=true
SCRAPE_TIMEOUT=30

# Logging
LOG_LEVEL=INFO

# Analiz Ayarları
DATA_RETENTION_DAYS=365
AGGREGATION_INTERVAL_MINUTES=60
SENTIMENT_ANALYSIS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL_MINUTES=15
